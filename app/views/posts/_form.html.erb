<%= form_with model: @post, class: 'needs-validation' do |f| %>
  <div class="mb-3">
    <%= f.label :date, class: 'form-label' %>
    <%= f.date_field :date, class: 'form-control form-control-lg', required: true %>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :rationale, class: 'form-label' %>
    <%= f.text_area :rationale, class: 'form-control form-control-lg', placeholder: 'Text goes here...', rows: 5, required: true %>
    <div class="invalid-feedback">
      Please enter rationale
    </div>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :user_id, class: 'form-control', placeholder: 'Input here...', disabled: true %>
    <%= f.label :user_id %>
  </div>
  <div class="d-grid gap-2">
    <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>