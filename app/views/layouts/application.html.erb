<!DOCTYPE html>
<html>
  <head>
    <title>Ott</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <%= render 'shared/flash' %>

        <div class="col-md-12">
          <div class="logo">
            <h1>Time Tracker</h1>
          </div>
          <%= render 'shared/nav' if logged_in? %>
          <div class="jumbotron m-3">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
